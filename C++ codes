#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    
    int x,y,a,b,i= 0;
    while (i == 0)
    {
        cout << "For adding up the numbers enter 1,For subtraction press 2, For multipiclation enter 3, to divide enter 4 ,To take the power of a number enter 5, to take the square root press 6, to exit press 7 ";
        cin >> a;
        if (a == 7){
            cout << "Aight gn" << endl;
            return 0;
        }
        cout << "Please enter the first(Base) number: ";
        cin >> x;
        cout << "Please enter the second(Power) number(If taking a square root enter any number): ";
        cin >> y;
        
        if(a == 1) b = x+y ;
        if(a == 2) b = x-y ;
        if(a == 3) b = x*y ;
        if(a == 4) b = x/y ;
        if(a == 5) b = pow(x,y) ;
        if(a == 6) b = sqrt(x) ;
        cout << (b) << endl;
        system ("PAUSE");
        cout << "Do you want to continue? If yes press 0, if no press 1: ";
        cin >> i;
    if (i==1){
    cout << "Aight gn";
}}}
